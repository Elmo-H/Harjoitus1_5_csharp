<Page
    x:Class="Harjoitus1_5_csharp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Harjoitus1_5_csharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <ComboBox
            Name="menu"
            Margin="70,200, 0 , 0"
            Width="200">
            <ComboBoxItem>Banaani</ComboBoxItem>
            <ComboBoxItem>Omena</ComboBoxItem>
            <ComboBoxItem>Mansikka</ComboBoxItem>
            <ComboBoxItem>Hunajavesimeloni</ComboBoxItem>
        </ComboBox>
        <Rectangle
            Name="box"
            RelativePanel.AlignRightWithPanel="True"
            Stroke="Black"
            Width="600"
            Height="300"
            Margin="0,200, 70 , 0">
        </Rectangle>
    </RelativePanel>
</Page>
