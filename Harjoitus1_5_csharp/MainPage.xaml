<Page
    x:Class="Harjoitus1_5_csharp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Harjoitus1_5_csharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <ComboBox
            Name="menu"
            Margin="200,200, 0 , 0"
            Width="200"
            SelectionChanged="menu_SelectionChanged">
            <ComboBoxItem>Kulta</ComboBoxItem>
            <ComboBoxItem>Punainen</ComboBoxItem>
            <ComboBoxItem>Valkoinen</ComboBoxItem>
            <ComboBoxItem>Vihreä</ComboBoxItem>
            <ComboBoxItem>Pinkki</ComboBoxItem>
        </ComboBox>

        <Border
            Name="box"
            RelativePanel.AlignRightWithPanel="True"
            Width="600"
            Height="300"
            Margin="0,200, 200 , 0">
            <TextBlock
                RelativePanel.AlignHorizontalCenterWith="box"
                Foreground="Black"
                Name="changingText"
                FontSize="20"
                Width="200"
                Height="30"
                Canvas.ZIndex="1">
            </TextBlock>
        </Border>
        
        
    </RelativePanel>
</Page>
